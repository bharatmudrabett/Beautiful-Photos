<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:id="@+id/rl1"
        android:layout_height="50dp">

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/button3"
            android:id="@+id/v1"
            android:background="@android:color/darker_gray"/>
        <Button
            android:background="#000000"
            android:layout_width="120dp"

            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="Next"

            android:id="@+id/button3"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#DA2A2A"
            android:layout_marginLeft="100dp"
            android:text="Select Grid"/>
    </RelativeLayout>


    <GridLayout

        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"

        android:columnCount="4">

        <ImageButton
            android:background="@drawable/sq1"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageButton"

            android:layout_row="0"
            android:layout_column="0"  />


        <ImageButton
            android:background="@drawable/sq2"
            android:layout_width="80dp"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp"
            android:layout_below="@+id/rl1"
            android:layout_row="0"
            android:layout_column="1"  />

        <ImageButton

            android:background="@drawable/sq3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_row="0"
            android:layout_column="2"

            android:id="@+id/" />

        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"

            android:layout_row="1"
            android:layout_column="0" />

        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_row="2"
            android:layout_column="0" />

        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_row="2"
            android:layout_column="2" />

        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_row="3"
            android:layout_column="0" />


        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_row="3"
            android:layout_column="1" />


        <ImageButton
            android:layout_marginTop="20dp"
            android:background="@drawable/sq12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_row="3"
            android:layout_column="2" />

    </GridLayout>

</RelativeLayout>