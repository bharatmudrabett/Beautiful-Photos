<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:background="#000000"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#000000"
        android:id="@+id/rl1"
        android:layout_height="50dp">

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/nxt"
            android:id="@+id/v1"
            android:background="@android:color/darker_gray"/>
        <Button
            android:background="#000000"
            android:layout_width="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/nxt"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/tv1"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#DA2A2A"
            android:text="Rotate Image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="200dp"
        android:layout_height="150dp"

        android:src="@drawable/index"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button

        android:id="@+id/clock"
        android:layout_width="wrap_content"

        android:layout_height="50dp"


        android:background="@drawable/clockwise"
        android:layout_alignTop="@+id/anti"
        android:layout_toRightOf="@+id/imgView"
        android:layout_toEndOf="@+id/imgView" />

    <Button

        android:id="@+id/anti"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
    android:background="@drawable/anticlockwise"

        android:layout_below="@+id/imgView"
        android:layout_toLeftOf="@+id/imgView"
        android:layout_toStartOf="@+id/imgView" />




</RelativeLayout>